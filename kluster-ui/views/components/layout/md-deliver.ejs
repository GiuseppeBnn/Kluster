<div
  id="modalOverlay-<%= chart %>"
  class="fixed inset-0 bg-secondary bg-opacity-70 flex justify-center items-center"
>
  <div class="p-6 rounded-xl shadow-2xl max-w-sm w-full bg-content">
    <h2 class="text-xl font-semibold mb-4">
      Do you want to deliver your deployment?
    </h2>
    <div>
      <input
        type="text"
        class="w-full border border-secondary rounded-md p-2 mb-4"
        placeholder="Insert token"
        id="inputDeliverToken-<%= chart %>"
      />
      <div class="flex gap-2">
        <button
          type="button"
          class="w-full shadow-lg text-secondary rounded-md p-2 hover:text-secondary-focus hover:shadow-md"
          id="deliverModalBtn"
        >
          Deliver
        </button>
        <button
          type="button"
          class="w-full shadow-lg text-secondary rounded-md p-2 hover:text-secondary-focus hover:shadow-md"
          id="abortBtn"
        >
          Abort
        </button>
      </div>
    </div>
    <p id="p_error-<%= chart %>" class="text-primary text-sm"></p>
  </div>
</div>
